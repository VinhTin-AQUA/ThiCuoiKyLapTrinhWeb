@model SanPham
@{
    ViewBag.Title = "Edit";

    // lấy 2 selectLisst
    SelectList selectPhanLoaiChinh = ViewBag.selectPhanLoaiChinh;
    SelectList selectPhanLoaiPhu = ViewBag.selectPhanLoaiPhu;
}

<div class="new_arrivals" style="margin-top: 200px">
    <div class="container">
        <div class="row">
            <div class="col-12">
                @using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(m => m.MaSanPham)

                    <div class="form-group">
                        @Html.DisplayNameFor(m => m.TenSanPham)
                        @Html.EditorFor(model => model.TenSanPham, null, null, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenSanPham)
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(m => m.DonGiaBanNhoNhat)
                        @Html.EditorFor(model => model.DonGiaBanNhoNhat, null, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DonGiaBanNhoNhat, null, new { htmlAttributes = new { @class = "text-danger" } })
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(m => m.TrangThai)
                        @Html.EditorFor(model => model.TrangThai, null, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TrangThai)
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(m => m.MoTaNgan)
                        @Html.TextAreaFor(model => model.MoTaNgan, new { rows = 4, columns = 40, @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MoTaNgan)
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(m => m.AnhDaiDien) <!-- hiển thị tên trường dữ liệu -->
                        <input type="file" name="image" class="form-control" /> <!-- ô bấm dô để chọn ảnh -->
                        <img src='https://localhost:44344/Content/images/@Model.AnhDaiDien' /> <!-- hiển thị hình ảnh -->
                    </div>
                    
                    <div class="form-group">
                        @Html.DisplayNameFor(m => m.NoiBat)
                        @Html.EditorFor(model => model.NoiBat, null, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NoiBat)
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(m => m.GiaNhap)
                        @Html.EditorFor(model => model.GiaNhap, null, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GiaNhap)
                    </div>

                    // tạo danh sách xổ xuống phân loại chính với phụ
                    <div class="form-group">
                        @Html.DisplayNameFor(m => m.PhanLoai)
                        @Html.DropDownListFor(m => m.MaPhanLoai, selectPhanLoaiChinh, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(m => m.PhanLoaiPhu)
                        @Html.DropDownListFor(m => m.MaPhanLoaiPhu, selectPhanLoaiPhu, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Lưu" />
                    </div>
                }
            </div>

        </div>
    </div>
</div>